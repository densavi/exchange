<section class="signIn">
	<div class="form__container">
		<div class="form__left">
			<div class="form__title"> Sign In </div>
			<form class="form__box" action="#">
				<div class="form__group">
					<label class="form__name form__name-email" for="form-email">Email</label>
					<input class="form__input" type="email" placeholder="Enter your email" id="login_email"> </div>
				<div class="form__group">
					<label class="form__name form__name-password" for="form-password">Password</label>
					<input class="form__input" type="password" placeholder="Enter your password" id="login_password"> </div>
				<div class="form__features">
					<div class="form__features-wrapper">
						<label class="form__features-label" for="form-remember">Remember me
							<input class="form__features-checkbox" type="checkbox" id="form-remember"> <span class="form__features-checkmark"></span> </label>
					</div> <a class="form__features-forget" href="reset-password">Forgot password?</a> </div>
				<button class="form__button" type="submit" id="sign_in"> <span>Sign In</span> </button>
			</form>
			<div class="form__sub">
				<div class="form__sub-text">New user?</div> <a class="form__sub-link" href="signup">Sign up</a> </div>
		</div>
		<div class="form__right"> <img src="/templates/res/images/space_one.jpg" alt=""> </div>
	</div>
</section>